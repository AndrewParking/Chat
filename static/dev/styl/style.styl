body
	background-image url('pattern.png')

#main-container 
	width 850px
	min-height 300px
	margin 0 auto
	margin-top 100px
	background #eee
	padding-bottom 40px

	.chat-header
		position relative
		padding 15px
		text-align right
		background #e9e9e9
		box-shadow 0 2px 4px #ccc
		margin-bottom 7px
		
		.logo
			position absolute
			display block
			top 20px
			left 30px
			font-size 22px
			font-family sans-serif
			color #aaa
			font-weight bold
			text-shadow 0 0 1px #aaa
		
		button
			display inline-block
			margin-left 10px
			border 0 solid #fff
			background #ccc
			padding 10px
			border-radius 4px
			color #fff
			cursor pointer
			font-size 14px
			font-weight bold
			transition all .3s ease-in-out
			box-shadow 0 1px 2px #aaa
			
			&:focus
				outline none

			&:hover
				box-shadow 0 2px 4px #aaa
		
		.current
			background #FF6433
			color #fff
				
	.error
		width 300px
		margin-left 270px
		margin-top 50px
		background #FF6433
		color #fff
		padding 7px 20px
		font-family sans-serif
		position relative
		border-radius 3px
		box-shadow 0 2px 6px #bbb
		
		.del-error
			position absolute
			right 20px
			top 10px
			width 15px
			height 15px
			cursor pointer

			&:before, &:after
				position absolute
				left 15px
				content ' '
				height 16px
				width 2px
				background-color #fff

			&:before
				transform rotate(45deg)

			&:after
				transform rotate(-45deg)
				
	.auth-form
		width 300px
		margin 0 auto
		margin-top 30px
		
		input,
		button
			display block
			margin-bottom 15px
			
		input
			width 100%
			padding 10px 15px
			color #888
			border-radius 2px
			border none
			box-shadow 0 0 0
			transition box-shadow .3s ease-in-out
			
			&:focus
				outline none
				box-shadow 0 2px 4px #ccc
				
		button
			border 0 solid #ccc
			background #FF6433
			color #fff
			padding 7px 30px
			border-radius 2px
			box-shadow 0 1px 2px #aaa
			cursor pointer
			font-size 14px
			font-weight bold
			transition all .3s ease-in-out
			margin 0 auto
			
			&:focus
				outline none

			&:hover
				box-shadow 0 2px 4px #aaa
	
	.app	
			
		.users
			min-height 250px
			width 200px
			float left
			
			button
				display block
				width 100%
				text-align left
				background #ccc
				color #fff
				font-size 14px
				font-weight bold
				border 0 solid red
				box-shadow 0 1px 2px #aaa
				transition box-shadow .4s ease-in-out
				cursor pointer
				margin-bottom 7px
				padding 0
				
				&:focus
					outline none
				
				&:hover
					box-shadow 0 2px 4px #aaa
					
				span:first-child
					display inline-block
					width 130px
					padding 10px 15px
					
				strong
					display inline-block
					padding 10.5px 5px
					width 30px
					text-align center
					background #FF6433
					border-top-right-radius 3px
					border-bottom-right-radius 3px
					
			.current-user
				background #aaa
			
		
		.chat
			min-height 250px
			width 650px
			float left
			
			.messages
				padding 20px 30px
				
				.message
					padding 10px 15px
					
					div
						display inline-block
						padding 7px 12px
						background #ccc
						box-shadow 0 2px 3px #aaa
						color #fff
						font-family sans-serif
						transition display .4s ease-in-out
						max-width 250px
						text-align left
						
						button
							opacity 0
							margin-left 10px
							width 10px
							height 12px
							background #aaa
							border 0 solid red
							border-radius 50%
							transition opacity .4s ease-in-out, background .4s ease-in-out
							cursor pointer
							
							&:hover
								background #FF6433
								
							&:focus
								outline none
							
						&:hover 
							
							button
								opacity 1
							
				
				.foreign
					text-align left
				
				.own
					text-align right
						
			
				.no-user-chosen
					text-align center
					margin 0 auto 
					margin-top 60px
					width 300px
					color #aaa
					font-weight bold
					font-size 18px
					font-family sans-serif
					text-shadow 1px 1px 3px #ccc
					
			.message-form
				margin-top 20px
				margin-left 40px
				
				textarea
					width 350px
					border 0 solid red
					padding 10px 10px
					color #888
					min-height 50px
					box-shadow 0 2px 2px #ccc
					transition box-shadow .4s ease-in-out
					
					&:focus
						outline none
						box-shadow 0 4px 6px #ccc
						
				button
					vertical-align top
					margin-left 10px
					border 0 solid #ccc
					background #FF6433
					color #fff
					padding 7px 30px
					border-radius 2px
					box-shadow 0 1px 2px #aaa
					cursor pointer
					font-size 14px
					font-weight bold
					transition all .3s ease-in-out
					
					&:focus
						outline none

					&:hover
						box-shadow 0 2px 4px #aaa
		
		&:after
			content ''
			display block
			clear both