#main-container 
	width 850px
	margin 0 auto
	margin-top 100px
	background #eee
	padding-bottom 40px

	.chat-header
		padding 15px
		text-align right
		background #e9e9e9
		box-shadow 0 2px 4px #ccc
		
		button
			display inline-block
			margin-left 10px
			border 3px solid #ccc
			background #e9e9e9
			padding 10px
			border-radius 2px
			color #bbb
			cursor pointer
			font-size 14px
			font-weight bold
			transition all .3s ease-in-out
			
			&:focus
				outline none

			&:hover
				color #fff
				background #FF663B
				border 3px solid #FF663B
		
		.current
			background #ccc
			color #fff
				
	.error
		width 300px
		margin 0 auto
		margin-top 50px
		background #FF663B
		color #fff
		padding 7px 20px
		font-family sans-serif
		position relative
		border-radius 3px
		
		.del-error
			position absolute
			right 20px
			top 10px
			width 15px
			height 15px
			cursor pointer

			&:before, &:after
				position absolute
				left 15px
				content ' '
				height 16px
				width 2px
				background-color #fff

			&:before
				transform rotate(45deg)

			&:after
				transform rotate(-45deg)
				
	.auth-form
		width 300px
		margin 0 auto
		margin-top 30px
		
		input,
		button
			display block
			margin-bottom 15px
			
		input
			width 100%
			padding 10px 15px
			color #888
			border-radius 2px
			border none
			box-shadow 0 0 0
			transition box-shadow .3s ease-in-out
			
			&:focus
				outline none
				box-shadow 0 2px 4px #ccc
				
		button
			border 3px solid #ccc
			background #e9e9e9
			padding 7px 30px
			border-radius 2px
			color #bbb
			cursor pointer
			font-size 14px
			font-weight bold
			transition all .3s ease-in-out
			margin 0 auto
			
			&:focus
				outline none

			&:hover
				color #fff
				background #FF663B
				border 3px solid #FF663B